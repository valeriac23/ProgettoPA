    "outDir": "src/dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["src/node_modules/@types", "./src/types"]
  },
  "include": ["src"],
